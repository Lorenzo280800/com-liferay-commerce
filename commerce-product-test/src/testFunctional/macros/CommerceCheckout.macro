definition {

	macro initializersCheckout {
		ProductMenu.gotoSite(site = "${site}");

		if ("${site}" == "Minium") {
			Navigator.openSpecificURL(url = "http://localhost:8080/group/Minium");
		}

		Click(locator1 = "CommerceAccelerators#MINI_CART_BUTTON");

		Click(locator1 = "CommerceAccelerators#CHECKOUT_BUTTON");

		Pause(locator1 = "3000");

		Select(
			locator1 = "CommerceAccelerators#CHECKOUT_SHIPPING_ADDRESS_SELECT",
			value1 = "${addressName}");

		Click(locator1 = "Button#CONTINUE");

		Click(
			key_fieldName = "ShippingOptionKey",
			key_radioOption = "${deliveryType}",
			locator1 = "CommerceAccelerators#CHECKOUT_DELIVERY_RADIO");

		Click(locator1 = "Button#CONTINUE");

		Click(locator1 = "Button#CONTINUE");
	}

}